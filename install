#!/usr/bin/env bash

DOTFILES=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

# Neovim
rm -rf $HOME/.config/nvim
ln -s $DOTFILES/nvim $HOME/.config/nvim

# Kitty terminal
rm -rf $HOME/.config/kitty
ln -s $DOTFILES/kitty $HOME/.config

# Tmux
rm -rf $HOME/.tmux.conf
ln -s $DOTFILES/tmux/tmux.conf $HOME/.tmux.conf

# Termnial commands
rm -rf $HOME/.zshrc
rm -rf $HOME/.zsh_aliases
ln -s $DOTFILES/.zshrc $HOME/.zshrc
ln -s $DOTFILES/.zsh_aliases $HOME/.zsh_aliases

# remove default .hushlogin
rm -rf $HOME/.hushlogin
ln -s $DOTFILES/.hushlogin $HOME/.hushlogin

# remove default phpactor config
rm -rf $HOME/.config/phpactor
ln -s $DOTFILES/phpactor $HOME/.config/phpactor

# Install ZSH auto suggestions
rm -rf $HOME/.oh-my-zsh/plugins/zsh-autosuggestions
git clone https://github.com/zsh-users/zsh-autosuggestions.git ~/.oh-my-zsh/plugins/zsh-autosuggestions
